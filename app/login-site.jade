extends jade/layouts/_login_page

block content
  .container-fluid.login
    .container
      #pwd-container.row
        .col-lg-4.col-md-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          section.login-form
            form(method='post', action='#', role='login')
              //img.img-responsive(src='http://i.imgur.com/RcmcLv4.png', alt='')
              img.img-responsive(src='images/logo_norsta.png', alt='')
              input.form-control.input-lg(type='email', name='email', placeholder='Nazwa użytkownika', required='', value='')
              input#password.form-control.input-lg(type='password', placeholder='Hasło', required='')
              .pwstrength_viewport_progress
              button.btn.btn-lg.btn-primary.btn-block(type='submit', name='go') Zaloguj
              div
                //a(href='#') Create account
                //|  or
                a(href='#') Zapomniałem/am hasła
                //label.checkbox.pull-left
                //  input(type='checkbox')
                //  | Active Directory
